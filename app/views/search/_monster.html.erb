<div class="row text-left">
  <a name="monster"></a>
  <h3>Monster.com <small>job listings</small></h3><br>
  <%@monster_jobs.each do |job|%>
    <%= link_to "#{job[:link]}", :target => "_blank" do %>
      <div class="panel job-panel">
        <div class="large-12 columns job-title">
          <%= job[:title] %>
        </div>
        <div class="row company-name">
          <div class="large-6 columns">
            <%= job[:company_name] %>
          </div>
          <div class="large-6 columns text-right location">
            <%= job[:location] %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>