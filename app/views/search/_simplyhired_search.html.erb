<div class="row">
  <h3>SimplyHired.com <small>job listings</small></h3><br>
  <a name="simplyhired"></a>
  <%@simplyhired_jobs.each do |job|%>
    <div class="large-4 small-6 columns">
      <div class="panel panel-fix">
        <div class="row">
          <div class="large-12 columns job-title">
            <%= job[:title] %>
          </div>
          <div class="company-name text-center">
            <%= job[:company_name] %>
          </div>
        </div><hr>
        <div class="row text-center job-link" target="_blank" job-link>
            <%= link_to "#{image_tag("ruby.png")} Link".html_safe, "http://#{(job[:link])}", :target => "_blank"%>
        </div><br>
      </div><br>
    </div>
  <%end%>
</div>